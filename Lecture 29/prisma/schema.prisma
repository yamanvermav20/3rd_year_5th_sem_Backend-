generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id  @default(autoincrement())
  email String @unique
  name String ?
  tweets Tweet[]    //added this after doing that CRUD  operations
}

model Tweet{
  id Int @id @default(autoincrement())
  userId Int 
  date DateTime @default(now())
  body String
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade) //we make it optional using "?" because if we delete a user, we still want to keep the tweet
}                                                               //so above i add onDelete: Cascade so that if user is deleted, tweet is also deleted